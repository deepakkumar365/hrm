# Database Configuration
DEV_DATABASE_URL=postgresql://username:password@hostname:port/database_name
PROD_DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Session Security
PROD_SESSION_SECRET=your-super-secret-session-key-here-dev
PROD_SESSION_SECRET=your-super-secret-session-key-here-prod

# Environment Selection (development or production)
ENVIRONMENT=development

# Database Migration Strategy
# Set to 'true' to automatically run migrations on app startup (recommended for Docker/deployment)
# Set to 'false' to skip migrations on startup (manual migration: flask db upgrade)
AUTO_MIGRATE_ON_STARTUP=true

# Python Version
PYTHON_VERSION=3.11.4